<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/customGr" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical" />


        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="center">

            <ImageButton
                android:id="@+id/switch1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/tt2" />

            <TextView
                android:id="@+id/txtFrom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:text="@string/english"
                android:textColor="@color/customGr"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtTo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="190dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="@string/vietnamese"
                android:textColor="@color/customGr"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/montserrat_light"
            android:padding="10dp"
            android:text="@string/translate"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:text="@string/english"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="200dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp">

            <EditText
                android:id="@+id/txtSrc"
                android:layout_width="339dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ems="100"
                android:inputType="textPersonName"
                app:layout_anchor="@+id/cardView2" />

            <ImageButton
                android:id="@+id/imageButtonSpeak"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/speaker" />

            <ImageButton
                android:id="@+id/imgButtonFavorite1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/star" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/copy" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/montserrat_light"
            android:padding="10dp"
            android:text="@string/translate"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/montserrat"
            android:padding="10dp"
            android:text="@string/vietnamese"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="420dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp">

            <ImageButton
                android:id="@+id/imgBtnSpeak2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/speaker" />

            <ImageButton
                android:id="@+id/imgButtonFavorite2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="285dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/star" />

            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/copy" />

            <TextView
                android:id="@+id/txtRes"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_marginTop="5dp"
                android:hint="Bản dịch"
                android:paddingLeft="30px"
                android:paddingTop="30px"
                android:textSize="24sp" />

        </androidx.cardview.widget.CardView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>
