<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="#E83E3E" >
    </solid>

    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="1dp"
        android:color="#3F3F43" >
    </stroke>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="13dp" >
    </corners>

</shape>